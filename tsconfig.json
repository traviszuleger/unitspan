{
    "compilerOptions": {
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "declarationDir": "./dist/types",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
        ],
        "types": [
            "node"
        ],
    },
    "files": [
        "./src/index.js"
    ]
}